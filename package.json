      },
      {
        "command": "secondaryTerminal.sendAllOpenFiles",
        "key": "ctrl+alt+a",
        "mac": "cmd+alt+a",
        "when": "editorTextFocus"
      },
      {
        "command": "secondaryTerminal.activateCopilot",
        "key": "ctrl+k ctrl+c",
        "mac": "cmd+k cmd+c"
      },
      {
        "command": "secondaryTerminal.focusTerminal",
        "key": "ctrl+`",
        "mac": "ctrl+`",
        "when": "!terminalFocus"
      },
      {
        "command": "secondaryTerminal.createTerminal",
        "key": "ctrl+shift+`",
        "mac": "ctrl+shift+`"
      },
      {
