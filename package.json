        "key": "ctrl+shift+x",
        "mac": "cmd+shift+x",
        "when": "terminalFocus && view == secondaryTerminal"
      },
      {
        "command": "secondaryTerminal.clearTerminal",
        "key": "ctrl+k",
        "mac": "cmd+k",
        "when": "terminalFocus && view == secondaryTerminal"
      },
